<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Boost"
             xmlns:converters="clr-namespace:Boost.Common.Converters"
             x:Class="Boost.App">
    <Application.Resources>
        <ResourceDictionary>

            <Color x:Key="Accent">#DC5C00</Color>
            <Color x:Key="AccentLight">#EC863C</Color>
            <Color x:Key="AccentDark">#B75915</Color>

            <Color x:Key="Main">#F0F0F0</Color>
            <Color x:Key="MainDark">#121212</Color>
            <converters:BoolToOppositeConverter x:Key="BoolToOppositeConverter" />
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
